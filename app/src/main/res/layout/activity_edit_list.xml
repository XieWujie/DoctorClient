<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="user" type="com.example.administrator.doctorClient.data.user.User"/>
        <variable name="presenter" type="com.example.administrator.doctorClient.presenter.EditListPresenter"/>
    </data>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".view.EditListActivity">
    <androidx.appcompat.widget.Toolbar  style="@style/toolbar_style" android:id="@+id/toolbar">
        <TextView android:layout_width="wrap_content"
                  android:text="编辑资料"
                  android:textColor="@android:color/white"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout   android:onClick="@{presenter::userName}"

                      style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="昵称"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="@{user.name}"
                      android:layout_marginRight="5dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>

        <RelativeLayout   android:onClick="@{presenter::qualification}"

                          style="@style/me_item_style">
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/meText"
                      android:layout_marginLeft="10dp"
                      android:layout_centerVertical="true"
                      android:text="资历"
                      android:layout_height="wrap_content"/>
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_centerVertical="true"
                          android:layout_alignParentRight="true"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content"
                          android:text="@{user.qualification}"
                          android:layout_marginRight="5dp"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:layout_marginRight="5dp"
                           android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                           android:layout_height="wrap_content"/>

            </LinearLayout>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>

    <RelativeLayout   android:onClick="@{presenter::graduatedSchool}"

                      style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="毕业学校"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="@{user.graduatedSchool}"
                      android:layout_marginRight="5dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>

    <RelativeLayout   android:onClick="@{presenter::goodAt}"

                      style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="擅长"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="@{user.goodAt}"
                      android:layout_marginRight="5dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>

    <RelativeLayout   android:onClick="@{presenter::workTime}"

                      style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="工作时间"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="@{user.workerTime}"
                      android:layout_marginRight="5dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>

    <RelativeLayout   android:onClick="@{presenter::phone}"

                      style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="联系电话"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="@{user.phone}"
                      android:layout_marginRight="5dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>

    <RelativeLayout   android:onClick="@{presenter::position}"

                      style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="工作地址"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="@{user.position.description}"
                      android:layout_marginRight="5dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>
</LinearLayout>
</layout>