<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="presenter" type="com.example.administrator.doctorClient.presenter.AcountAndSafetyPresenter"/>
    </data>
<com.example.administrator.doctorClient.custom.DragLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                                android:orientation="vertical"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="match_parent">

    <RelativeLayout   android:onClick="@{presenter::resetPassword}"

                      style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="设置登陆密码"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="去修改"
                      android:layout_marginRight="5dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>


    <RelativeLayout  style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="修改邮箱"
                  android:layout_height="wrap_content"/>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="horizontal"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="详细信息"
                      android:layout_marginRight="5dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>
    <RelativeLayout  style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="第三方账号绑定"
                  android:layout_height="wrap_content"/>

            <ImageView android:layout_width="wrap_content"
                       android:layout_marginRight="5dp"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                       android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>

    <RelativeLayout  style="@style/me_item_style">
        <TextView android:layout_width="wrap_content"
                  android:textColor="@color/meText"
                  android:layout_marginLeft="10dp"
                  android:layout_centerVertical="true"
                  android:text="永久注销账号"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_marginRight="5dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                   android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View android:layout_width="match_parent"
          android:background="@color/dividingLine"
          android:layout_height="1dp"/>
</com.example.administrator.doctorClient.custom.DragLinearLayout>
</layout>