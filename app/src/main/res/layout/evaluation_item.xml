<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="evaluation" type="com.example.administrator.doctorClient.data.evaluation.Evaluation"/>
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_marginBottom="2dp"
              android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="40dp"
                                                  android:id="@+id/avatar"
                                                  android:layout_margin="2dp"
                                                  imageSrc="@{evaluation.avatar}"
                                                  android:layout_marginRight="5dp"
                                                  android:layout_height="40dp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="@{evaluation.name}"
                  android:textColor="#000000"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="@{evaluation.content}"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
</layout>